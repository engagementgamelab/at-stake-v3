    "version": "2.0.0",
    "tasks": [
        {
            "label": "grunt",
            "type": "shell",
            "command": "grunt",
            "options": {
                "cwd": "${workspaceFolder}/../el-web-sdk/"
            },
            "args": [
                "--sites=at-stake"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}