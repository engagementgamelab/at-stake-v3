<div class="rolecard-inner inner">
   
 	<div>       
	  
	  <button id="btn-close-role-card" class="btn" type="submit" name="submit" data-keep_enabled="true">
	     {{{cloudinaryUrl '/v1494604113/at-stake/layout/shape.svg' height=100}}}
	  </button>

	</div>
	
	<div class="role-info">
		<div class="icon"></div>
		<h2 class="title">{{title}}</h2>
		<div class="description">{{{bio.html}}}</div>

	</div>
		<div class="line"></div>
	<div class="agenda-wrap">
		<h1 class="header">Needs</h1> 

		{{#if agendaItems}}
			<div class="agenda-item"><div class="agenda">{{agendaItems.[0]}}</div></div>
			<div class="agenda-item"><div class="agenda">{{agendaItems.[1]}}</div></div>
		{{/if}}

		{{#if secretGoal}}
			<h1 class="header">Secret Goal</h1> 
			<div>{{secretGoal}}</div>
		{{/if}}

		<button id="btn-role-done" class="btn" type="submit" name="submit">
			Continue
		</button>
	</div>

</div>