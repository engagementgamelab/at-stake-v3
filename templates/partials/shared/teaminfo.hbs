<div class="rolecard-inner inner">

	<div class="role-info card">

        <button id="btn-close-role-card" class="btn" type="submit" name="submit" data-keep_enabled="true">
            {{{cloudinaryUrl '/v1540845195/at-stake/icons/close.svg' height=25}}}
        </button>
		
		<h2 class="title">Team Info</h2>
	
	</div>

	<div class="agenda-wrap team toggle">
        {{#each this}}
            {{#if username}}
                <div class="player-wrap">
                    <div class="info">
                        <h2>{{username}}</h2>
                        {{#if role.needs}}
                            {{role.needs.[0]}}
                                <br />—<br />
                            {{role.needs.[1]}}
                        {{/if}}
                        {{#if role.agendaItems}}
                            {{role.agendaItems.[0]}}
                                <br />—<br />
                            {{role.agendaItems.[1]}}
                        {{/if}}
                    </div>
                    <div class="check">                        
                        <p><span class="star">&#9733;</span> {{role.secretGoal}}</p>

                        <label class="switch">
                            {{#ifeq @index 0}}
                                <detail class="tooltip-content">When a player meets their secret goal, you can check it off. They'll score extra points at the end of the game.</detail>
                            {{/ifeq}}
                            <input type="checkbox">
                            <span class="slider round">
                            </span>
                        </label>
                    </div>

                </div>
            {{/if}}
        {{/each}}
	</div>

</div>