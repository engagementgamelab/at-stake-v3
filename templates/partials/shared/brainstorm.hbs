	{{!-- TIMER START --}}
	<div class="screen">
		{{> component/instructions 
				decider=true
				heading="Press the button to start the timer"
				body="When everyone is ready, press the button to start the timer."
		}}
		
		{{> component/instructions 
				heading="Get ready to think of a proposal"
				body="Remember to incorporate your needs and embody your stakeholder role!"
		}}
		
		{{#each players}}
			{{#ifnoteq decider true}}

				{{!-- Timer in button mode  --}}
				{{> component/timer 
						decider=true				
						preview=true
						time=config.thinkSeconds
						stage="think"
						body="Press the red button to start!"
				}}

				{{> component/timer				
						preview=true
						time=config.thinkSeconds
						stage="think"
						body=(combine username ', your turn')
				}}
		{{/ifnoteq}}
	{{/each}}
	</div>

